                        <demeanor>Unintelligent</demeanor>

                        <habitat climate="Any" terrain="Any"
                                 frequency="very rare"/>

                        <origin>Habisfern</origin>
                        <genre>Fantasy</genre>
                    </information>

                    <description>
                        <short>
                            Earth elementals are creatures of earth and
                            rock.
                        </short>

                        <physical>
                            <para>
                                This type of Earth Elemental looks like a
                                short human, though its skin is rocky, and
                                its movements jerky. It has black stony
                                eyes, thick four fingered hands and wide
                                feet.
                            </para>
                        </physical>
                    </description>

                    <statistics xmlns="http://yagsbook.sourceforge.net/xml/yags">
                        <attributes size="4" soak="15">
                            <attribute name="strength" score="3"/>
                            <attribute name="stamina" score="6"/>
                            <attribute name="agility" score="2"/>
                            <attribute name="dexterity" score="2"/>
                            <attribute name="perception" score="2"/>
                            <attribute name="intelligence" score="*"/>
                            <attribute name="charisma" score="1"/>
                            <attribute name="will" score="3"/>
                        </attributes>

                        <skills>
                            <group name="Talents" type="talents">
                                <skill name="Athletics" score="3"/>
                                <skill name="Awareness" score="2"/>
                                <skill name="Brawl" score="4"/>
                                <skill name="Charm" score="1"/>
                                <skill name="Guile" score="1"/>
                                <skill name="Sleight" score="2"/>
                                <skill name="Stealth" score="3"/>
                                <skill name="Throw" score="1"/>
                            </group>
                        </skills>

                        <combat>
                            <combatstyle style="Fist" skill="Brawl">
                                <attack attribute="agility" bonus="+2"/>
                                <defence attribute="agility" bonus="+0"/>
                                <damage type="mixed" bonus="+1"/>
                            </combatstyle>
                        </combat>

                        <passions>
                            <passion name="Bravery" score="10"/>
                            <passion name="Ego" score="4"/>
                            <passion name="Restraint" score="1"/>
                            <passion name="Temperance" score="1"/>
                        </passions>

                        <advantages>
                            <advantage name="Elemental"/>
                        </advantages>
                    </statistics>
                </beast>


                <beast name="Earth Elemental III">
